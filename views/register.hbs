<!DOCTYPE html>
<html lang="en">
<!-- Head -->

<head>
    {{> head}}
</head>

<body class="bg-light">

    <div class="container">
        <div class="row align-items-center justify-content-center min-vh-100 gx-0">

            <div class="col-12 col-md-5 col-lg-4">
                <div class="card card-shadow border-0">
                    <div class="card-body">
                        <form class="row g-6" action="/auth/register" method="POST">
                            <div class="col-12">
                                <div class="text-center">
                                    <h3 class="fw-bold mb-2">S'inscrire</h3>
                                    <p>Suivez les étapes faciles</p>
                                </div>
                            </div>

                            {{!-- <input type="file" name="photo" /> --}}

                            <div class="profile">
                                <div class="profile-body mt-6 p-0">
                                    <div class="avatar avatar-lg justify-content-center">
                                        <span class="avatar-text bg-primary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-image">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                <polyline points="21 15 16 10 5 21"></polyline>
                                            </svg>
                                        </span>

                                        <div class="badge badge-lg badge-circle bg-primary border-outline position-absolute bottom-0 end-0-" for="upload-chat-img" style="bottom: -23px !important;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus">
                                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                            </svg>
                                            <label>Ajouter une photo</label>
                                        </div>

                                        <input id="upload-chat-img" class="d-none" type="file" name="photo">
                                        <label class="stretched-label mb-0" for="upload-chat-img"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="signup-name" name="username" placeholder="Name">
                                    <label for="signup-name">Nom</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="signup-email" name="email" placeholder="Email">
                                    <label for="signup-email">E-mail ou téléphone</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="signup-password" name="password"
                                        placeholder="Password">
                                    <label for="signup-password">Mot de passe</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-block btn-lg btn-primary w-100" type="submit">Créer votre compte</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Text -->
                <div class="text-center mt-8">
                    <p>Vous avez déjà un compte ? <a href="/auth/login">Se connecter</a></p>
                </div>

            </div>
        </div> <!-- / .row -->
    </div>

    <!-- Scripts -->
    {{> script}}
</body>

