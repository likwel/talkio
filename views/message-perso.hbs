    <script>

        const socket = io("http://localhost:3000"); // ou ton domaine API

        const formSend = document.querySelector('#send-message');
        const textarea = document.querySelector('#message-content');
        const button = document.querySelector('button');

        // Exemple : on récupère le destinataire depuis une variable JS
        const toUserId = {{ userId }};
        const fromUserId = {{ currentUserId }};

        // joindre la room privée pour recevoir les messages
        //socket.emit("join", { userId: fromUserId });

        let hasJoined = false;

        if (!hasJoined) {
            socket.emit("join", { userId: fromUserId });
            hasJoined = true;
        }

        textarea.addEventListener("input", () => {
            socket.emit("typing", {
                fromUserId,
                toUserId,
            });
        });

        // Écouter l'envoi du message
        formSend.addEventListener("click", function (e) {
            e.preventDefault();

            const content = textarea.value.trim();
            if (!content) return;
            // envoyer le message via socket
            socket.emit("privateMessage", {
                fromUserId,
                toUserId,
                content,
            });

            // vider le champ
            textarea.value = "";
        });

        // réception des messages
        socket.on("privateMessage", (message) => {

            try {
                console.log("💬 Message reçu :", message);

                let body = document.querySelector(".chat-body-inner > div")
                const isMine = message?.sender?.id === fromUserId;
                if (isMine) {
                    console.log("📤 Envoyé par moi :", message.content);

                    const time = '16:39'
                    showRealMessage(body, message.content, time)

                } else {
                    console.log("📥 Reçu :", message.content);
                    const time = '16:39'
                    showOtherMessage(body, message.content, time, message.sender)
                }

                scrollToBottom()
                
            } catch (err) {
                console.error("💥 Erreur dans réception message :", err);
            }
        });
        

        let typing = document.querySelector("#typingMessage_head")
        let status_head = document.querySelector("#status_head")

        let typingDisplayTimeout;

        socket.on("typing", ({ fromUserId }) => {
            //showTypingIndicator(fromUserId);
            console.log(fromUserId + 'en train d\'ecrire')
            console.log(typing)
            //typingLoad()
            if (typing) {
                status_head.textContent ='écrit '
                status_head.classList.add("text-warning")
                typing.classList.remove("d-none")
                scrollToBottom()

                // Rafraîchit le timer pour éviter d’effacer trop tôt
                clearTimeout(typingDisplayTimeout);
            }
        });

        socket.on("stopTyping", ({ fromUserId }) => {
            //hideTypingIndicator(fromUserId);
            console.log(fromUserId + 'a arrete l\'ecriture')
            if (typing) {
                //status_head.textContent= 'connecté(e)'
                //typing.classList.add("d-none")

                typingDisplayTimeout = setTimeout(() => {
                    status_head.classList.remove("text-warning")
                    status_head.textContent = 'connecté(e)';
                    typing.classList.add("d-none");
                }, 3000); // délai ajustable

            }
        });

        socket.on("connect_error", (err) => {
            console.error("❌ Erreur de connexion socket :", err);
        });


        function scrollToBottom() {
            const container = document.querySelector('.chat-body-inner > div');
            if (container) {
                container.scrollTop = container.scrollHeight;
            }
        }

        function typingLoad() {
            const snippets = document.querySelectorAll('.snippet');

            for (let i = 0; i < snippets.length; i++) {
                snippets[i].addEventListener('mouseleave', clearTooltip);
                snippets[i].addEventListener('blur', clearTooltip);
            }

            function showTooltip(el, msg) {
                el.setAttribute('class', 'snippet tooltip');
                el.setAttribute('aria-label', msg);
            }

            function clearTooltip(e) {
                e.currentTarget.setAttribute('class', 'snippet');
                e.currentTarget.removeAttribute('aria-label');
            }

            const clipboardSnippets = new ClipboardJS('.snippet', {
                text: trigger => trigger.getAttribute('data-title')
            });

            clipboardSnippets.on('success', e => {
                e.clearSelection();
                showTooltip(e.trigger, 'Copied!');
            });

            clipboardSnippets.on('error', e => {
                showTooltip(e.trigger, 'Copy failed!');
            });
        }

        // réception des visios
        socket.on("privateVisio", (message) => {
            try {
                console.log("💬 Message reçu :", message);

                let body = document.querySelector(".chat-body-inner > div");
                const isMine = message?.sender?.id === fromUserId;

                if (isMine) {
                    console.log("📤 Envoyé par moi :", message.callRoomId);
                    const time = '16:39';
                    showRealMessage(body, message.callRoomId, time);
                } else {
                    console.log("📥 Reçu :", message.callRoomId);
                    const time = '16:39';
                    showOtherMessage(body, message.callRoomId, time, message.sender);

                    // ⬇️ Proposer d'accepter l'appel
                    if (confirm("📞 Invitation à une visio. Voulez-vous accepter ?")) {
                        startCall(message.sender.id); // Si accepte
                    }
                }

                scrollToBottom();

            } catch (err) {
                console.error("💥 Erreur dans réception message :", err);
            }
        });

        function bindVisioButtons() {
            document.querySelectorAll(".send-visio").forEach(btn => {
                btn.addEventListener("click", (e) => {
                    e.preventDefault();

                    await startCall(toUserId);
                    /*socket.emit("privateVisio", {
                        fromUserId,
                        toUserId,
                    });*/
                });
            });
        }

